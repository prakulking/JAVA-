public class RightTriangleNumberPatternAscDesc {
    public static void main(String[] args) {
        int rows = 4; // Specify the number of rows

        // Print the ascending part
        for (int i = 1; i <= rows; i++) {
            // Loop to print the numbers in each row
            for (int j = 1; j <= i; j++) {
                System.out.print(i + " ");
            }
            // Move to the next line after printing each row
            System.out.println();
        }

        // Print the descending part
        for (int i = rows - 1; i >= 1; i--) {
            // Loop to print the numbers in each row
            for (int j = 1; j <= i; j++) {
                System.out.print(i + " ");
            }
            // Move to the next line after printing each row
            System.out.println();
        }
    }
}
